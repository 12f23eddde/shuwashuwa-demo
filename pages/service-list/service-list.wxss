.service-loading {
  width: 100%;
  display: flex;
  justify-content: center;
}

.fixedIcon {
  width: 115rpx;
  height: 115rpx;
  position: fixed;
  top: 75vh;
  left: 75vw;
  display: block;

  /** shadows */
  border-radius: 50%;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.5);
}

.addBtnArea {
  margin-top: 10rpx;
  height: 85vh;
  width: 100vw;
}

.iconorder {
  position: fixed;
  text-align: center;
  margin-right: 60rpx;
  width: 115rpx;
  height: 115rpx;
  border-radius: 50%;
  background-color: #22ac38;
  border-color: #22ac38;
  box-shadow: 2px 2px 2px grey;
  overflow: hidden;
}

.dropdownOrder {
  top: 0;
  z-index: 1;
  left: 0;
  position: fixed;
  width: 100%;
}

.titileOrder {
  display: block;
  font-size: large;
}

.nOrder {
  display: block;
  font-weight: bold;
  font-size: large;
}

.numOrder {
  font-weight: bold;
  align-content: center;
  float: left;
  width: 10%;
  margin-right: 5%;
}

.orderDetails {
  margin-bottom: 2%;
}

.newOrder {
  display: block;
  --cell-background-color: white;
  --cell-active-color: #bad8f7ab;
  box-shadow: 0px 3px 2px grey;
}

.collTitle {
  margin-top: 9rpx;
  font-weight: bold;
  font-size: x-large;
}

.dateView {
  text-decoration: underline;
  font-size: large;
  font-style: oblique;
}

.mapbuttons {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.bottons {
  align-self: center;
  display: block;
  width: 80%;
  border-radius: 50%;
}

.rejectedDetails {
  display: block;
  text-align: center;
  color: #f44;
  margin-bottom: 3%;
}

.comfirmedDetails {
  display: block;
  text-align: center;
  color: #22ac38;
  margin-bottom: 3%;
}

.closeSlot {
  align-self: center;
  display: inline-block;
  width: 100%;
}

.van-swipe-cell__left,
.van-swipe-cell__right {
  align-items: center;
  display:flex;
  width: 80px;
  height: 10%;
  font-size: 15px;
  color: #fff;
  text-align: center;
  background-color: #f44;
}

.orderCollapse {
  display: block;
  margin-top: 0%;
  margin-bottom: 10%;
  height: 100%;
}

.blank { 
  height: 46px;
  clear:both; 
  overflow:hidden; 
  display:block; 
  overflow:hidden;
}

.noService {
  height: 80vh;
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  color: gray;
}

.tabbar-spacer { 
  height: 70px;
  width: 100%;
}