/* pages/application-list/application-list.wxss */

.applicationCell {
  width: 90%;
  align-self: center;
  display: block;
  box-shadow: 5rpx 5rpx 10rpx rgba(0, 0, 0, 0.2);
}

.centerTitle {
  display: flex;                      
  justify-content: center; 
  align-items: center;
  justify-content: center;
}

.reason {
  display: flex;                      
  justify-content: flex-start; 
}

.buttons_ {
  margin-top: 7%;
  display: block;
  width: 100%;
  border-radius: 50%;
  box-shadow: 5rpx 5rpx 10rpx rgba(0, 0, 0, 0.2);
}

.rejectedDetails {
  display: block;
  text-align: center;
  color: #f44;
  margin-bottom: 3%;
}

.test{
  display: flex;   
  float: right;
}

.left{
  font: large;
  text-align:left;
}

.right{
  font: large;
  text-align:right;
}

.infoRow{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}

.mapbuttons {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.bottons {
  display: block;
  width: 40%;
}

.blank{ 
  height: 20px;
  clear:both; 
  overflow:hidden; 
  display:block; 
  overflow:hidden;
}

.viewTitle {
  font: large;
  margin-top: 9rpx;
}

.viewValue {
  font: large;
  margin-top: 9rpx;
}

.title {
  width: 90%;
  font-size: x-large;
  font-weight: bold;
  text-align: left;
  color: rgb(101, 101, 101);
  margin-top: 2%;
  margin-bottom: 3%;
}

.maptitle {
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.noApplication {
  height: 80vh;
  width: 100vw;
  display: flex;
  justify-content: center;
  align-items: center;
  color: gray;
}

.cell-title {
  margin-left: 5vw;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  width: fit-content;
}

.application-cell-title {
  font-size: large;
  font-weight: bold;
  margin-left: 10rpx;
}

.application-cell-label {
  margin-top: 0.4em;
}

.application-cell-col {
  display: flex;
  justify-content: flex-end;
  align-items: center;

  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-bold {
  font-weight: bold;
  color: #333;
}

.application-button .van-button {
  width: 50vw;
  margin: 0;
  border-radius: 0;
  padding: 0;
  border: 0px;
}

.button-container {
  display: flex;
}