/* pages/application-list/application-list.wxss */

.applicationCell {
  width: 90%;
  align-self: center;
  display: block;
  box-shadow: 5rpx 5rpx 10rpx rgba(0, 0, 0, 0.2);
}

.centerTitle {
  display: flex;                      
  justify-content: center; 
  align-items: center;
  justify-content: center;
}

.reason {
  display: flex;                      
  justify-content: flex-start; 
}

.buttons_ {
  margin-top: 7%;
  display: block;
  width: 100%;
  border-radius: 50%;
  box-shadow: 5rpx 5rpx 10rpx rgba(0, 0, 0, 0.2);
}

.rejectedDetails {
  display: block;
  text-align: center;
  color: #f44;
  margin-bottom: 3%;
}

.test{
  display: flex;   
  float: right;
}

.left{
  font: large;
  text-align:left;
}

.right{
  font: large;
  text-align:right;
}

.infoRow{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}

.mapbuttons {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.bottons {
  display: block;
  width: 40%;
}

.blank{ 
  height: 20px;
  clear:both; 
  overflow:hidden; 
  display:block; 
  overflow:hidden;
}

.viewTitle {
  font: large;
  margin-top: 9rpx;
}

.viewValue {
  font: large;
  margin-top: 9rpx;
}

.title {
  width: 90%;
  font-size: x-large;
  font-weight: bold;
  text-align: left;
  color: rgb(101, 101, 101);
  margin-top: 2%;
  margin-bottom: 3%;
}

.maptitle {
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.noApplication {
  height: 900rpx;
  text-align: center;
  transform:translateY(50%);
  color: gray;
}