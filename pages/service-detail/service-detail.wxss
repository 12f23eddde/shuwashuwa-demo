/* pages/service-detail/service-detail.wxss */
/* Ref:https://github.com/youzan/vant/issues/3568 */
.servDetailPage {
  align-content: center;
}

.maptitle {
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.title {
  width: 90%;
  font-size: xx-large;
  font-weight: bold;
  text-align: left;
  color: rgb(101, 101, 101);
  margin-top: 2%;
  margin-bottom: 3%;
}

.blank { 
  height: 46px;
  clear:both; 
  overflow:hidden; 
  display:block; 
  overflow:hidden;
}

.buttons {
  margin-top: 7%;
  align-self: center;
  display: block;
  width: 80%;
  border-radius: 50%;
  box-shadow: 5rpx 5rpx 20rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 1%;
}

.buttonsUnder {
  margin-top: 2%;
  align-self: center;
  display: block;
  width: 80%;
  border-radius: 50%;
  box-shadow: 5rpx 5rpx 20rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 4%;
}

.mapbuttons {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.van-button--buttonSubmit {
  align-self: center;
  display: inline-block;
  --button-default-height: 80%;
  width: 100%;
}

.buttons_ {
  margin-top: 7%;
  display: block;
  width: 40%;
  border-radius: 50%;
  box-shadow: 5rpx 5rpx 10rpx rgba(0, 0, 0, 0.2);
}

.serviceDetailCell_ {
  margin-bottom: 2%;
  align-self: center;
  width: 95%;
  display: block;
  box-shadow: 5rpx 2rpx 10rpx rgba(0, 0, 0, 0.2);
}

.serviceDetailCell {
  margin-bottom: 2%;
  align-self: center;
  width: 95%;
  display: block;
  border-radius: 20rpx;
  box-shadow: 5rpx 2rpx 10rpx rgba(0, 0, 0, 0.2);
}