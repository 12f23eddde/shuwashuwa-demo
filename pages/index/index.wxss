/* pages/activity/activity.wxss */
page {
  display: flex;
  flex-direction: column;
  height: calc(100% - constant(safe-area-inset-bottom));
  height: calc(100% - env(safe-area-inset-bottom));
}

.index-page-container {
  display: flex;
  border: none;
  width: 100%;
  height: 100%;
}

.tabbar-spacer {
  height: 50px; 
  width: 100%;
}

.cell-group {
  width: 100%;
  align-self: center;
  display: block;
}

.cell-group-container {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.viewTitle {
  margin-top: 9rpx;
}

.viewValue {
  margin-top: 9rpx;
}

.noActivity {
  width: 100vw;
  height: 80vh;
  text-align: center;
  margin: auto;
  color: gray;
}

.activity-cell-title {
  font-size: large;
  font-weight: bold;
  text-align: left;
  margin-top: 2%;
  margin-bottom: 3%;
}

.activity-cell .van-cell {
  flex-direction: column;
}

.activity-cell-meta {
  text-align: left;
}

.activity-cell-info {
  display: flex;
  justify-content: space-between;
}

.link-cell > .van-cell {
  display: flex;
  align-items: center;
}

.link-cell-icon {
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-right: 10rpx;
}

.cell-title {
  margin-left: 5vw;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  width: fit-content;
}

.empty-cell .van-cell {
  justify-content: center;
}

.empty-cell .van-cell__title {
  flex: none;
  margin-left: 10rpx;
}

.main-tabs .van-tabs__wrap::after {
  content: "";
  width: 100%;
  position: absolute;
  box-sizing: border-box;
  border-bottom: 1px solid #dde5ec;
  transform: scaleY(0.5);
  bottom: 1px;
}

.sub-tabs .van-tabs__wrap::after {
  display: none;
}

.cell-group-container--alter .van-cell-group.van-hairline--top-bottom::after,
.cell-group-container--alter-top .van-cell-group.van-hairline--top-bottom::after
{
  border-width: 0px;
}

.cell-group-container--alter .van-cell::after {
  border-width: 0px;
}

.sub-tabs .van-tabs__line {
  background-color: transparent !important;
}

.main-tabs .van-ellipsis {
  font-weight: 550;
}

.main-tabs {
  height: 100%;
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: stretch;
}

.main-tabs .van-tabs {
  height: 100%;
}

.main-tabs .van-tabs__content {
  height: 100%;
  margin-top: 7px;
}

.sub-tabs {
  height: fit-content;
  display: flex;
  margin-bottom: 10px;
}

.sub-tabs .van-tabs.van-tabs--line {
  width: 100% !important;
}

.sub-tabs .van-tabs__wrap {
  height: fit-content !important;
}

.sub-tabs .van-ellipsis.index--van-ellipsis {
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: normal;
  font-size: small;
  height: 30px;
}

.sub-tabs .van-tab--active {
  color: #07c160;
  text-decoration: underline;
}
