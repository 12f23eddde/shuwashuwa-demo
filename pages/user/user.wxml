<view>
  <van-toast id="van-toast" />
  <!-- 这里用双向绑定 -->
  <van-cell-group>
    <van-field id="userName" model:value="{{ userName }}" label="姓名" placeholder="张三"/>
    <van-field id="studentId" model:value="{{ studentId }}" label="学号" placeholder="1800012345"/>
    <van-field id="phoneNumber" model:value="{{ phoneNumber }}" label="手机号" placeholder="13919114810"/>
    <van-field id="nickName" model:value="{{ nickName }}" label="昵称" placeholder="一般通过志愿者"/>
    <van-field id="identity" model:value="{{ identity }}" label="身份" placeholder="本科学生"/>
    <van-field id="grade" model:value="{{ grade }}" label="年级" placeholder="大三"/>
    <van-field id="email" model:value="{{ email }}" label="邮箱" placeholder="example@example.com"/>
    <van-field id="department" model:value="{{ department }}" label="部门" placeholder="信息科学技术学院"/>
    <van-field id="comment" model:value="{{ comment }}" label="备注" placeholder="啊这"/>
  </van-cell-group>
  <van-button type="primary" size="large" bindtap="onSubmit" id="buttonSubmit"> 提交 </van-button>
  <tab-bar active='3'></tab-bar>
</view>