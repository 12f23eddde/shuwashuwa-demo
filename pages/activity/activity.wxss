}

.activityCell {
  width: 95%;
  align-self: center;
  display: block;
  box-shadow: 5rpx 5rpx 10rpx rgba(0, 0, 0, 0.2);
}

.title {
  width: 90%;
  font-size: x-large;
  font-weight: bold;
  text-align: left;
  color: rgb(101, 101, 101);
  margin-top: 2%;
  margin-bottom: 3%;
}

.titleNa {
  text-decoration-line: underline;
