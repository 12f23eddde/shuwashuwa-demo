/* pages/order/order.wxss */
.dropdownOrder {
  top: 0;
  z-index: 1;
  left: 0;
  position: fixed;
  width: 100%;
}

.titileOrder {
  display: block;
  font-size: large;
}

.nOrder {
  display: block;
  font-weight: bold;
  font-size: large;
}

.numOrder {
  font-weight: bold;
  align-content: center;
  float: left;
  width: 10%;
  margin-right: 5%;
}

.orderDetails {
  margin-bottom: 2%;
}

.newOrder {
  display: block;
  --cell-background-color: white;
  --cell-active-color: #bad8f7ab;
  box-shadow: 0px 3px 2px grey;
}

.collTitle {
  display: block;
  font-weight: bold;
  font-size: x-large;
}

.dateView{
  text-decoration: underline;
  font-size: large;
  font-style: oblique;
}

.mapbuttons {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.bottons {
  display: block;
  width: 40%;
}

.van-button--orderBut {
  align-self: center;
  display: inline-block;
  --button-default-height: 80%;
  width: 100%;
}

.rejectedDetails {
  display: block;
  text-align: center;
  color: #f44;
  margin-bottom: 3%;
}

.closeSlot {
  align-self: center;
  display: inline-block;
  width: 100%;
}

.van-swipe-cell__left,
.van-swipe-cell__right {
  align-items: center;
  display:flex;
  width: 80px;
  height: 10%;
  font-size: 15px;
  color: #fff;
  text-align: center;
  background-color: #f44;
}

.orderCollapse {
  display: block;
  margin-top: 0%;
  margin-bottom: 10%;
  height: 90%;
}

.blank{ 
  height: 46px;
  clear:both; 
  overflow:hidden; 
  display:block; 
  overflow:hidden;
}

.fixedIcon {
  width: 60px;
  height: 60px;
  position: fixed;
  display: block;
  right: 30px;
  bottom: 110px;
}

.iconorder {
  text-align: center;
  width: 60px;
  height: 60px;
  position: fixed;
  display: block;
  right: 30px;
  bottom: 110px;
  border-radius: 30px;
  background-color: #22ac38;
  border-color: #22ac38;
  box-shadow: 0px 3px 2px grey;
}