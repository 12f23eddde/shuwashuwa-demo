.userPage{
  align-items: center;
  display: flex;
  flex-direction: column;
}

.userinfo-avatar {
  overflow:hidden;
  display: block;
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
  margin-top: 120rpx;
  border-radius: 50%;
}

.nickname {
  align-self: center;
}

.usernickname {
  font-size: x-large;
  font: bold;
  color: rgb(103, 103, 103);
  width: 100%;
  text-align: left;
}

.userotherinfo {
  color: rgb(142, 142, 142);
  width: 100%;
}

.userinfo {
  display:flex;
  align-items: center;
  margin-top: 5%;
  width: 85%;
  height: 220rpx;
  border-radius: 30rpx;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
  text-align: center;
}

.detailInfo {
  margin-top: 10%;
  width: 90%;
}

.blank{ 
  height: 46px;
  clear:both; 
  overflow:hidden; 
  display:block; 
  overflow:hidden;
}

.userIcon {
  height: 120rpx;
  width: 120rpx;
  margin-left: 3%;
  margin-right: 3%;
}

.uIcon {
  height: 100%;
  width: 100%;
}

.buttons {
  margin-top: 7%;
  align-self: center;
  display: block;
  width: 80%;
  border-radius: 50%;
  box-shadow: 5rpx 5rpx 20rpx rgba(0, 0, 0, 0.2);
  margin-bottom: 1%;
}

.van-button--buttonSubmit {
  display: block;
  width: 80%;
}