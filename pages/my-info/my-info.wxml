<view class="userPage">
  <view class="userinfo-avatar">
    <open-data class="userPic" type="userAvatarUrl"></open-data>
  </view>
  <view class="userinfo">
    <view class="userIcon">
      <image src="icon-demo-1126.png" class="uIcon" mode="aspectFit" />
    </view>
    <view class="usernickname">
      <open-data type="userNickName" class='nickname'></open-data>
    </view>
    <view class="userotherinfo">
      <van-icon name="manager" />
      <view class="phone">{{ phoneNumber }}</view>
      <view class="stutype">普通用户</view>
    </view>
  </view>
  <van-toast id="van-toast" />
  <van-notify id="van-notify" />
  <van-cell-group class="detailInfo">
    <van-field 
      id="userName" 
      model:value="{{ userName }}" 
      required label="姓名" 
      placeholder="Misaka99" 
      error-message="{{ errMsg.userName }}" 
    />
    <van-field 
      id="studentId" 
      model:value="{{ studentId }}" 
      required label="学号" 
      placeholder="114514" 
      error-message="{{ errMsg.studentId }}" 
    />
    <van-field 
      id="phoneNumber"
      model:value="{{ phoneNumber }}" 
      required label="手机号"
      placeholder="15822905002" 
      error-message="{{ errMsg.phoneNumber }}" 
    />
    <van-field 
      id="nickName" 
      model:value="{{ nickName }}" 
      label="昵称" 
      placeholder="一般通过用户" 
    />
    <van-field 
      id="identity" 
      model:value="{{ identity }}" 
      label="身份" 
      placeholder="本科学生" 
    />
    <van-field 
      id="grade" 
      model:value="{{ grade }}" 
      label="年级" 
      placeholder="大三" 
    />
    <van-field 
      id="email" 
      model:value="{{ email }}" 
      label="邮箱" 
      placeholder="example@example.com" 
      error-message="{{ errMsg.email }}" 
    />
    <van-field 
      id="department" 
      model:value="{{ department }}" 
      label="部门" 
      placeholder="信息科学技术学院" 
    />
    <van-field 
      id="comment" 
      model:value="{{ comment }}" 
      autosize label="备注" 
      placeholder="啊这" 
    />
  </van-cell-group>
  <view class="buttons">
    <van-button 
      type="primary" 
      size="large" 
      round 
      bindtap="onSubmit" 
      id="buttonSubmit"
    >
      提交修改
    </van-button>
  </view>
  <view class="blank"></view>
  <view class="blank"></view>
  <view class="blank"></view>
</view>
<tab-bar active='3'></tab-bar>