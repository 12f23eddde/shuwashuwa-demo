.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 90px;
  background: #d5d4d4;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow: 0px 2px 2px 4px rgb(202, 202, 202);
}

.tab-bar-border {
  background-color: rgba(255, 255, 255, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  width: 30px;
  height: 30px;
}

.tab-bar-item cover-view {
  font-size: 12px;
}
